@model TechShopSolution.ViewModels.Website.Contact.FeedbackViewModel

@{
    ViewData["Title"] = "Chi tiết feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter {
    <script src="~/js/ChangeNameToSlug.js"></script>
}
<div class="container-fluid">
    <ol class="breadcrumb mb-4 mt-3">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/contact/ListFeedbacks">Feedback</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="padding-container">
        <div class="row">
            <div class="col-lg-12 col-12 wrapper-content-limit">
                <div class="wrapper-content mb-3 shadow">
                    <label class="title-fill">Chi tiết feedback</label>
                    <hr />
                    <input asp-for="id" class="form-control" hidden />
                    <div class="form-group">
                        <label class="control-label lableFormField">Tiêu đề</label>
                        <input asp-for="title" class="form-control" id="txtName" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label class="control-label lableFormField">Nội dung</label>
                        <textarea asp-for="content" class="form-control" id="txtName" readonly="readonly"></textarea>
                    </div>
                    <div class="form-group">
                        <label class="control-label lableFormField">Gửi bởi</label>
                        <input asp-for="name" class="form-control" id="txtName" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label class="control-label lableFormField">Điện thoại</label>
                        <input asp-for="phone" class="form-control" id="txtName" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label class="control-label lableFormField">Địa chỉ email</label>
                        <input asp-for="email" class="form-control" id="txtName" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label class="control-label lableFormField">Gửi lúc</label>
                        <input asp-for="create_at" class="form-control" id="txtName" readonly="readonly" />
                    </div>
                    <div class="text-right">
                        <button class="btn btn-info text-right" type="submit" asp-action="FeedbackChangeStatus" asp-controller="Contact">
                            Đánh dấu đã đọc
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


