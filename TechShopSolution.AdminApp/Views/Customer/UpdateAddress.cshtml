@model TechShopSolution.ViewModels.Catalog.Customer.CustomerUpdateAddressRequest

@{
    ViewData["Title"] = "UpdateAddress";
    Layout = null;
}


<div class="modal fade" id="ModalRelation" style="margin-left:0px">
    <div class="modal-dialog">
        <div class="modal-content" style="width:100px">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title expander_style">Thay đổi địa chỉ</h4>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateAddress">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="District" class="control-label"></label>
                        <input asp-for="District" class="form-control" />
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ward" class="control-label"></label>
                        <input asp-for="Ward" class="form-control" />
                        <span asp-validation-for="Ward" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="House" class="control-label"></label>
                        <input asp-for="House" class="form-control" />
                        <span asp-validation-for="House" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>