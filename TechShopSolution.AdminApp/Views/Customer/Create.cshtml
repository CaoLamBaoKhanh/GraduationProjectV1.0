@model TechShopSolution.ViewModels.Catalog.Customer.CustomerCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" asp-controller="customer" method="post">
    <div class="container-fluid">
        <h2 class="mt-4">Tạo mới người dùng</h2>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active">Tạo mới người dùng</li>
        </ol>
       
        <div class="padding-container">

            <div class="row">
                <div class="col-lg-8 col-12">
                    <div class="wrapper-content">
                        <label class="title-fill">Thông tin chung</label>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="name" class="control-label"></label>
                            <input asp-for="name" class="form-control" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="password" class="control-label"></label>
                            <input asp-for="password" class="form-control" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="phone" class="control-label"></label>
                            <input asp-for="phone" class="form-control" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="birthday" class="control-label"></label>
                            <input asp-for="birthday" class="form-control" />
                            <span asp-validation-for="birthday" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="sex" /> @Html.DisplayNameFor(model => model.sex)
                            </label>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="status" /> @Html.DisplayNameFor(model => model.status)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="wrapper-content">
                        <label class="title-fill">Địa chỉ</label>
                        <hr />
                        <div class="form-group">
                            <label asp-for="address" class="control-label"></label>
                            <input asp-for="address" class="form-control" />
                            <span asp-validation-for="address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-6">
                        <button class="btn btn-primary" asp-action="Index" asp-controller="Customer">
                            <i class="fa fa-chevron-left"></i>  Trở về danh sách
                        </button>
                    </div>
                    <div class="col-2">
                        <button class="btn btn-success btnAdd " type="submit" asp-action="Create" asp-controller="Customer">
                            <i class="fa fa-save"></i>
                            Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


