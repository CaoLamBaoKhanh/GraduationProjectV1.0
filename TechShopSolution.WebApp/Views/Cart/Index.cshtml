@using System.Security.Claims;
@{
    ViewData["Title"] = "Giỏ hàng";
}
@section Script{
    <script src="~/js/Cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home", new { area = "" })">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active"> Giỏ hàng</li>
    </ul>
    <h3>
        GIỎ HÀNG <small><span id="lbl_number_of_items"><span></span></span> sản phẩm </small>
        <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-large pull-right">
            <i class="icon-arrow-left"></i> Tiếp tục mua hàng
        </a>
    </h3>
    <hr class="soft" />


    <table class="table table-bordered table-cart">
        <thead>
            <tr>
                <th>Ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Sớ lượng/Cập nhật</th>
                <th>Giá</th>
                <th>Khuyến mãi</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody id="cart_body">
        </tbody>
        <tfoot class="table-hr-top">
            <tr>
                <td colspan="5" style="text-align:right">Tổng tạm tính:	</td>
                <td id="lbl_total">0đ</td>
            </tr>
            <tr>
                <td colspan="5" style="text-align:right">Mã giảm giá:	</td>
                <td>- <span id="lbl_couponprice">0đ</span></td>
            </tr>
            <tr>
                <td colspan="5" style="text-align:right"><strong>Thành tiền </strong></td>
                <td class="label label-important" style="display:block"> <strong><span id="lbl_maintotal">0đ</span></strong></td>
            </tr>
        </tfoot>
    </table>


    <table class="table table-bordered table-cart">
        <tbody>
            <tr>
                <td>
                    <div class="control-group">
                        <label class="control-label"><strong> Mã GIẢM GIÁ: </strong> </label>
                        <div class="controls">
                            <input type="text" class="input-medium" id="codeCoupon" style="text-transform:uppercase" placeholder="CODE">
                            <button type="button" class="btn" id="btnApplyCoupon"> Áp dụng </button><br />
                            <span id="CouponMessage"></span>
                        </div>
                    </div>
                </td>
            </tr>

        </tbody>
    </table>

    <a href="@Url.Action("Index", "Home", new { area = "" })" class="btn btn-large table-cart"><i class="icon-arrow-left"></i> Tiếp tục mua hàng </a>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="@Url.Action("Checkout", "Cart", new { id =  User.FindFirst(ClaimTypes.Sid).Value })" class="btn btn-large pull-right table-cart">Thanh toán <i class="icon-arrow-right"></i></a>
    }
    else
    {
        <a href="@Url.Action("Checkout", "Cart")" class="btn btn-large pull-right table-cart">Thanh toán <i class="icon-arrow-right"></i></a>
    }
</div>
