@using System.Security.Claims;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"] - TechShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="@ViewData["Desciption"]">
    <meta name="author" content="TechShop">
    <meta name="keywords" content="@ViewData["Keywords"]">
    <link id="callCss" rel="stylesheet" href="/themes/bootshop/bootstrap.min.css" media="screen" />
    <link href="/themes/css/base.css" rel="stylesheet" media="screen" />
    <!-- Bootstrap style responsive -->
    <link href="/themes/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="/themes/css/font-awesome.css" rel="stylesheet" type="text/css">
    <!-- Google-code-prettify -->
    <link href="/themes/js/google-code-prettify/prettify.css" rel="stylesheet" />
    <!-- fav and touch icons -->
    <link rel="shortcut icon" href="/themes/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/themes/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/themes/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/themes/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/themes/images/ico/apple-touch-icon-57-precomposed.png">
    <style type="text/css" id="enject"></style>
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">

</head>
<body>
    @RenderSection("FacebookComments", required: false)
    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>

    <div class="alert alert-success" id="snackbar" role="alert">
        <b class="ReultMessage"></b>
    </div>
    <div class="alert alert-success" id="snackbarDanger" role="alert">
        <b id="ErrorMessage"></b>
    </div>
    @if (ViewBag.SuccessMsg != null)
    {
        <div class="alert alert-success" id="snackbarAccount" role="alert">
            <b>@ViewBag.SuccessMsg</b>
        </div>
    }
    @if (ViewBag.ErrorMsg != null)
    {
        <div class="alert alert-danger" id="snackbarDanger" role="alert">
            <b>@ViewBag.ErrorMsg</b>
        </div>
    }


    <div id="header">
        <div class="container">
            <!-- Navbar ================================================== -->
            <div id="logoArea" class="navbar">
                <a id="smallScreen" data-target="#topMenu" data-toggle="collapse" class="btn btn-navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-inner">
                    <a class="brand" href="@Url.Action("Index", "Home", new { area = "" })"><img src="/themes/images/logo.png" alt="TechShop" /></a>
                    @await Component.InvokeAsync("Category")
                    <ul id="topMenu" class="nav">
                        <li class=""><a href="#">Giới thiệu</a></li>
                        <li class=""><a href="#">Tin tức</a></li>
                        <li class=""><a href="#">Liên hệ</a></li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {

                        <div class="btn-group btnDropdownAccount">
                            <div class="btn-group">
                                <button class="btn btn-primary" href="#"><i class="icon-user icon-white"></i> Tài khoản</button>
                                <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></button>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Detail", "Account", new { id = User.FindFirst(ClaimTypes.Sid).Value })"><i class="icon-pencil"></i> Thông tin tài khoản</a></li>
                                    <li><a href="@Url.Action("OrderTracking", "Account", new { id = User.FindFirst(ClaimTypes.Sid).Value })"><i class="icon-file"></i> Kiểm tra đơn hàng</a></li>
                                    <li class="divider"></li>
                                    <li><a href="@Url.Action("Logout", "Account")"><i class="i"></i>Đăng xuất</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="btn-group btnDropdownAccount">
                            <a href="@Url.Action("Login", "Account")" role="button" style="padding-right:0"><span class="btn btn-large btn-success">Đăng nhập</span></a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Header End====================================================================== -->
    @RenderSection("Slider", required: false)
    <div id="mainBody">
        <div class="container">
            <div class="row">
                <!-- Sidebar ================================================== -->
                <div id="sidebar" class="span3">
                    <div class="well well-small shadow">
                        <a id="myCart" href="@Url.Action("Index", "Cart")">
                            <img src="/themes/images/ico-cart.png" alt="cart">
                            <span id="lbl_number_items_header">0</span> Sản phẩm trong giỏ hàng
                        </a>
                    </div>
                    @await Component.InvokeAsync("SlideBar")
                    <br />
                    <div class="thumbnail">

                    </div>
                </div>
                <!-- Sidebar end=============================================== -->
                @RenderBody()
            </div>
        </div>
    </div>
    <button onclick="topFunction()" id="myBtn" title="Go to top"><i class="fas fa-chevron-up"></i></button>

    <!-- Footer ================================================================== -->
    <div id="footerSection">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <h5>TÀI KHOẢN</h5>
                    <a href="login.html">THÔNG TIN TÀI KHOẢN</a>
                    <a href="login.html">ĐỊA CHỈ</a>
                    <a href="login.html">LỊCH SỬ ĐƠN HÀNG</a>
                </div>
                <div class="span3">
                    <h5>THÔNG TIN</h5>
                    <a href="contact.html">LIÊN HỆ</a>
                    <a href="register.html">GỬI FEEDBACK</a>
                    <a href="legal_notice.html">ĐĂNG KÝ</a>
                </div>
                <div class="span3">
                    <h5>OFFERS CỦA CHÚNG TÔI</h5>
                    <a href="#">SẢN PHẨM MỚI</a>
                    <a href="#">SẢN PHẨM BÁN CHẠY</a>
                    <a href="special_offer.html">SẢN PHẨM NỔI BẬT</a>
                </div>
                <div id="socialMedia" class="span3 pull-right">
                    <h5>KÊNH XÃ HỘI </h5>
                    <a href="#"><img width="60" height="60" src="/themes/images/facebook.png" title="facebook" alt="facebook" /></a>
                    <a href="#"><img width="60" height="60" src="/themes/images/twitter.png" title="twitter" alt="twitter" /></a>
                    <a href="#"><img width="60" height="60" src="/themes/images/youtube.png" title="youtube" alt="youtube" /></a>
                </div>
            </div>
            <p class="pull-right">&copy; TechShop</p>
        </div><!-- Container End -->
    </div>
    <!-- Placed at the end of the document so the pages load faster ============================================= -->
    <script src="/themes/js/jquery.js" type="text/javascript"></script>
    <script src="/themes/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="/themes/js/google-code-prettify/prettify.js"></script>
    <script src="/themes/js/bootshop.js"></script>
    <script src="/themes/js/jquery.lightbox-0.5.js"></script>
    <script src="~/js/site.js"></script>
    <script>
        var site = new SiteController();
        site.initialize();
    </script>
    @RenderSection("Script", required: false)
    <script>
        $(function () {
            $("#loaderbody").addClass('hide');

            $(document).bind('ajaxStart', function () {
                $("#loaderbody").removeClass('hide');
            }).bind('ajaxStop', function () {
                $("#loaderbody").addClass('hide');
            });
        });
    </script>
    @if (ViewBag.SuccessMsg != null)
    {
        <script>
            var x = document.getElementById("snackbarAccount");

            // Add the "show" class to DIV
            x.className = "show";

            // After 3 seconds, remove the show class from DIV
            setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
        </script>
    }
    @if (ViewBag.ErrorMsg != null)
    {
        <script>
            window.onload = function () {
                var x = document.getElementById("snackbarDanger");

                // Add the "show" class to DIV
                x.className = "show";

                // After 3 seconds, remove the show class from DIV
                setTimeout(function () { x.className = x.className.replace("show", ""); }, 3000);
            };
        </script>
    }
    <!-- Themes switcher section ============================================================================================= -->
    <div id="secectionBox">
        <link rel="stylesheet" href="/themes/switch/themeswitch.css" type="text/css" media="screen" />
        <script src="/themes/switch/theamswitcher.js" type="text/javascript" charset="utf-8"></script>
    </div>
</body>
</html>
