
@{
    ViewData["Title"] = "Đăng kí tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="index.html">Trang chủ</a> <span class="divider">/</span></li>
        <li class="active">Đăng kí tài khoản</li>
    </ul>
    <h3> Login</h3>
    <hr class="soft" />

    <div class="row">
        <div class="span4">
            <div class="well">
                <h5>CREATE YOUR ACCOUNT</h5><br />
                Enter your e-mail address to create an account.<br /><br /><br />
                <form action="register.html">
                    <div class="control-group">
                        <label class="control-label" for="inputEmail0">E-mail address</label>
                        <div class="controls">
                            <input class="span3" type="text" id="inputEmail0" placeholder="Email">
                        </div>
                    </div>
                    <div class="controls">
                        <button type="submit" class="btn block">Create Your Account</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="span1"> &nbsp;</div>
        <div class="span4">
            <div class="well">
                <h5>Đã có tài khoản ?</h5>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="control-group">
                        <label class="control-label" for="inputEmail1">Email</label>
                        <div class="controls">
                            <input class="span3" type="text" id="inputEmail1" placeholder="Địa chỉ Email...">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" name="Email" for="inputPassword1">Password</label>
                        <div class="controls">
                            <input type="password" name="Password" class="span3" id="inputPassword1" placeholder="Mật khẩu">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn">Đăng nhập</button> <a href="#">Bạn quên mật khẩu?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
